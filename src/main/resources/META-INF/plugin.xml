<idea-plugin>
    <id>io.github.takc923.better-sticky-selection</id>
    <name>Better Sticky Selection</name>
    <vendor url="https://github.com/takc923">takc923</vendor>

    <description><![CDATA[
    <p>IntelliJ's original sticky selection doesn't support multi-carets.</p>
    <p>This Better Sticky Selection plugin supports it.</p>
    <p>Default keymap is</p>
    <ul>
      <li>C-;</li>
    </ul>
    <p>Please change it on your preference.</p>
    ]]></description>

    <depends>com.intellij.modules.lang</depends>
    <idea-version since-build="183" />

    <actions>
        <action id="BetterStickySelectionAction" class="BetterStickySelectionAction" text="Toggle Better Sticky Selection" description="Toggle Better Sticky Selection">
            <keyboard-shortcut first-keystroke="ctrl SEMICOLON" keymap="Mac OS X 10.5+"/>
            <keyboard-shortcut first-keystroke="ctrl SEMICOLON" keymap="Mac OS X"/>
            <keyboard-shortcut first-keystroke="ctrl SEMICOLON" keymap="$default"/>
        </action>
    </actions>
</idea-plugin>