<idea-plugin>
    <id>io.github.takc923.better-sticky-selection</id>
    <name>Better Sticky Selection</name>
    <vendor url="https://github.com/takc923">takc923</vendor>

    <description><![CDATA[
    Better Sticky Selection supports multiple carets.
    ]]></description>

    <depends>com.intellij.modules.lang</depends>
    <idea-version since-build="181"/>

    <actions>
        <action id="StickySelectionAction" class="StickySelectionAction" text="toggle sticky selection" description="toggle sticky selection">
            <keyboard-shortcut first-keystroke="meta SEMICOLON" keymap="$default"/>
        </action>
    </actions>
</idea-plugin>